{% extends "base.jinja2" %}
{% block body %}
  {% if request.authenticated_userid %}
    <div id="add">
      <a href="{{ request.route_url('edit', id=entry.id) }}" >Edit this post</a>
    </div>
  {% endif %}
  <article class="entry" id="entry={{entry.id}}">
    <h3>{{ entry.title }}</h3>
    <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}
    <div class="entry_body">
      {{ add_markdown(entry.text)|safe }}
    </div>
  </article>
{% endblock %}